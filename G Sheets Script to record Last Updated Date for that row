/*
  Log user edits to Column X (specified on Lines 10, 20, 25)
  */

function onEdit() {
  var s = SpreadsheetApp.getActiveSpreadsheet().getSheetByName("SpreadsheetName");
  var r = s.getActiveCell();
  
  // I will log user edits in Col 4 (Col D)
  if( r.getColumn() != 16 ) {     
    var row = r.getRow();
    var time = new Date();
    time = Utilities.formatDate(time, "America/Los_Angeles", "yyyy-MM-dd");
    if (row == 1) {
      //do nothing if it's the header row
    } else {
      try {
        var user = Session.getEffectiveUser().getEmail();
        var ldap = user.substring(0, user.lastIndexOf("@"));
        SpreadsheetApp.getActiveSheet().getRange('P' + row.toString()).setValue(time);   //Col 4
      }
      catch(err) {
        var time = new Date();
        time = Utilities.formatDate(time, "America/Los_Angeles", "yyyy-MM-dd"); 
        SpreadsheetApp.getActiveSheet().getRange('P' + row.toString()).setValue(time);}  //Col 4
    }   
  };
 };
