/*
  Simple js script to look up if today is a certain day of the week

  https://stackoverflow.com/users/26210/andrew-moore
  source: https://stackoverflow.com/questions/1181219/determine-if-a-date-is-a-saturday-or-a-sunday-using-javascript
*/

var today = new Date();
if(today.getDay() == 6 || today.getDay() == 0) alert('Weekend!');  //6 = Saturday, 0 = Sunday


